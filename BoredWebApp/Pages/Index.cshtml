@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<div class="container">
    <div class="text-center">
        <div class="mb-3">
            <form method="get"><button id="main-button">I'm bored!</button></form>
        </div>
        <form method="post">
            <select name="type" asp-for="ActivityFormRequest.Type">
                <option value="social">social</option>
                <option value="cooking">cooking</option>
                <option value="busywork">busywork</option>
                <option value="relaxation">relaxation</option>
                <option value="music">music</option>
            </select>
            <input type="number" name="participants" value="1" asp-for="ActivityFormRequest.Participants"/>
            <select name="price" asp-for="ActivityFormRequest.Price">
                <option value="low">low</option>
                <option value="medium">medium</option>
                <option value="high">high</option>
            </select>
            <button>GetRandomActivity</button>
        </form>
        <h1>@Model.Activity.Activity</h1>
        <p>Type = @Model.Activity.Type</p>
        <p>Number of participants = @Model.Activity.Participants</p>
        <p>Price = @Model.Activity.Price</p>
        <p>Accessibility = @Model.Activity.Accessibility</p>


    </div>
</div>