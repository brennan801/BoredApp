@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <label for="name">Client Name</label>
    <input type="text" name="name"/>

    <button class="p-2">Save</button>
</form>

<form>
    <label for="dId">Download Config For Client:</label>
    <input type="number" name="dId" />
    <button asp-page-handler="Download">Download File</button>
</form>

<form asp-antiforgery="false" method="post">
    <button asp-page-handler="Wireguard">Restart Wireguard</button>
</form>

<p>
    <pre>@Model.WireguardStatus</pre>
</p>
